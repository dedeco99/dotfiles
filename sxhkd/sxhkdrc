#
# wm independent hotkeys
#

super + {1, 3}
	{firefox, kitty}

#
# bspwm hotkeys
#

# restart bspwm and sxhkd
alt + shift + r
	bspc wm -r && pkill -USR1 -x sxhkd

# close and kill
alt + shift + q
	bspc node -k

# swap the current node and the biggest node
alt + g
	bspc node -s biggest

# set the window state
alt + {t, space, f}
	bspc node -t {tiled, floating, fullscreen}

# focus the node in the given direction
alt + {_, control} + {Up, Down, Left, Down}
	bspc node -{f, s} {north, south, west, east}

# focus or send to the given workspace
alt + {_, shift} + {1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# move/resize

# expand a window by moving one of its side outward
alt + shift + r : {h, j, k, l}
	bspc node -z {top +20, down +20, left +20, right +20}

# move a floating window
alt + shift + m : {Up, Down, Left, Right}
	bspc node -v {-20 0,20 0,0 -20,0 20}
