#
# wm independent hotkeys
#

super + {1, 3}
	{firefox, kitty}

# lock screen
super + l
	i3lock -c 000000

# screenshot
Print
	flameshot gui

# Switch keyboard layouts
super + {u, p}
	setxkbmap -layout {us, pt}

#
# bspwm hotkeys
#

# restart bspwm and sxhkd
alt + shift + r
	bspc wm -r && pkill -USR1 -x sxhkd

# close and kill
alt + shift + q
	bspc node -k

# set the window state
alt + {t, f, m}
	bspc node -t {tiled, floating, fullscreen}

# focus the node in the given direction
alt + {Up, Down, Left, Down}
	bspc node -f {north, south, west, east}

# focus on the given workspace
alt + {1-9}
	bspc desktop -f ^{1-9}

# send to the given workspace
alt + shift + {1-9}
	id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}

# move/resize

# expand a window by moving one of its side outward
alt + 0 ; {h, s, r, shift + s}
	{systemctl hibernate, systemctl suspend, reboot, shutdown now}
