[module/bspwm]
type = internal/bspwm
pin-workspaces = true
ws-icon-0 = 1;󰲠
ws-icon-1 = 2;󰲢
ws-icon-2 = 3;󰲤
ws-icon-3 = 4;󰲦
ws-icon-4 = 5;󰲨
ws-icon-5 = 6;󰲪
ws-icon-6 = 7;󰲬
ws-icon-7 = 8;󰲮
ws-icon-8 = 9;󰲰
ws-icon-9 = 10;󰿬
label-focused = %icon%
label-focused-background = ${colors.primary}
label-focused-padding = 1
label-occupied = ${self.label-focused}
label-occupied-padding = ${self.label-focused-padding}
label-urgent = ${self.label-focused}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}
label-empty =
label-empty-padding = ${self.label-focused-padding}
format = <label-state> <label-mode>

[module/i3]
type = internal/i3
pin-workspaces = true
ws-icon-0 = 1;󰲠
ws-icon-1 = 2;󰲢
ws-icon-2 = 3;󰲤
ws-icon-3 = 4;󰲦
ws-icon-4 = 5;󰲨
ws-icon-5 = 6;󰲪
ws-icon-6 = 7;󰲬
ws-icon-7 = 8;󰲮
ws-icon-8 = 9;󰲰
ws-icon-9 = 10;󰿬
label-focused = %icon%
label-focused-padding = 1
label-focused-background = ${colors.primary}
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}
label-visible = ${self.label-focused}
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}
label-urgent = ${self.label-focused}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-background = ${colors.alert}
format = <label-state> <label-mode>

[module/mpd]
type = internal/mpd
interval = 1
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 󰙣
icon-next = 󰙡
icon-random = 
icon-repeat = 󰑖
icon-repeatone = 󰑘
icon-single = 凌
toggle-on-foreground = #ff
toggle-off-foreground = #55
label-song-maxlen = 50
format-online = <icon-repeat>  <icon-prev>  <toggle>  <icon-next>  <icon-random>  | <label-song> | <label-time>

[module/tipy]
type = custom/script
interval = 300
exec = ~/.config/polybar/tipy.sh https://tipyfamily.com
format = %{F#4caf50}%{F-}
format-fail = %{F#ff5252}%{F-}

[module/updates]
type = custom/ipc
hook-0 = ~/.config/polybar/updates.sh
initial = 1
format = <output>

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/thinkpad_hwmon/hwmon/hwmon6/temp1_input
warn-temperature = 70
label = %temperature-c%
format = <label>
label-warn = %temperature-c%
format-warn = <label-warn>
label-warn-foreground = ${colors.alert}

[module/memory]
type = internal/memory
interval = 2
label = %gb_used:9%
format-prefix = "RAM "

[module/gpu]
type = custom/script
interval = 2
tail = true
exec-if = nvidia-smi
exec = nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,noheader,nounits | awk -F'[,]' '{print "GPU", ""$1"%", ""$2"°C"}'

[module/root]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = Root %percentage_used%%
label-unmounted = Root unmounted
label-unmounted-foreground = ${colors.alert}

[module/home]
type = internal/fs
interval = 25
mount-0 = /home
label-mounted = Home %percentage_used%%
label-unmounted = Home unmounted
label-unmounted-foreground = ${colors.alert}

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
label-connected = %downspeed:8% ↓ %upspeed:8% ↑
format-connected = <label-connected>
label-disconnected = Disconnected
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
label-connected = %downspeed:8% ↓ %upspeed:8% ↑
format-connected = <label-connected>
label-disconnected = Disconnected
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}

[module/xkeyboard]
type = internal/xkeyboard
label-layout = %layout%
format = <label-layout>

[module/date]
type = internal/date
interval = 5
date = "%d.%m"
date-alt = "%a %d-%m-%Y"
time = %H:%M
time-alt = %H:%M:%S
label = %date% %time%
format = <label>

