[colors]
background = ${xrdb:color0:#222}
background-alt = #444
foreground = ${xrdb:color7:#222}
foreground-alt = #555
primary = #5294e2
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 30
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 0
border-color = #000000
module-margin-left = 0
module-margin-right = 2
font-0 = "SourceCodePro:pixelsize=12;3"
font-1 = "Iosevka Nerd Font:size=16;4"
font-2 = "Iosevka Nerd Font:size=12;3"
modules-left = bspwm i3
modules-right = updates cpu temperature memory system movies series wlan eth xkeyboard date
tray-position = right
enable-ipc = true
wm-restack = bspwm

[bar/left]
monitor = ${env:MONITOR:DVI-D-0}
width = 100%
height = 30
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 0
border-color = #000000
padding-right = 1
module-margin-left = 0
module-margin-right = 2
font-0 = "SourceCodePro:pixelsize=12;2"
font-1 = "Iosevka Nerd Font:size=16;4"
modules-left = bspwm i3
modules-right = date

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
ws-icon-0 = 1;❶
ws-icon-1 = 2;❷
ws-icon-2 = 3;❸
ws-icon-3 = 4;❹
ws-icon-4 = 5;❺
ws-icon-5 = 6;❻
ws-icon-6 = 7;❼
ws-icon-7 = 8;❽
ws-icon-8 = 9;❾
ws-icon-9 = 10;❿
label-focused = %icon%
label-focused-background = ${colors.primary}
label-focused-padding = 1
label-occupied = ${self.label-focused}
label-occupied-padding = ${self.label-focused-padding}
label-urgent = ${self.label-focused}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}
label-empty =
label-empty-padding = ${self.label-focused-padding}
format = <label-state> <label-mode>

[module/i3]
type = internal/i3
pin-workspaces = true
ws-icon-0 = 1;❶
ws-icon-1 = 2;❷
ws-icon-2 = 3;❸
ws-icon-3 = 4;❹
ws-icon-4 = 5;❺
ws-icon-5 = 6;❻
ws-icon-6 = 7;❼
ws-icon-7 = 8;❽
ws-icon-8 = 9;❾
ws-icon-9 = 10;❿
label-focused = %icon%
label-focused-padding = 1
label-focused-background = ${colors.primary}
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}
label-visible = ${self.label-focused}
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}
label-urgent = ${self.label-focused}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-background = ${colors.alert}
format = <label-state> <label-mode>

[module/updates]
type = custom/ipc
hook-0 = ~/.config/polybar/updates.sh
initial = 1

format = <output>

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format-prefix = "CPU "
format = <label>

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
label = %temperature-c%
format = <label>
label-warn = %temperature-c%
format-warn = <label-warn>
label-warn-foreground = ${colors.alert}

[module/memory]
type = internal/memory
interval = 2
label = %gb_used%
format = <label>
format-prefix = "RAM "

[module/system]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = System %percentage_used%%
label-unmounted = System unmounted
label-unmounted-foreground = ${colors.alert}

[module/movies]
type = internal/fs
interval = 25
mount-0 = /mnt/BigBoyMovies
label-mounted = Movies %percentage_used%%
label-unmounted = Movies unmounted
label-unmounted-foreground = ${colors.alert}

[module/series]
type = internal/fs
interval = 25
mount-0 = /mnt/BigBoySeries
label-mounted = Series %percentage_used%%
label-unmounted = Series unmounted
label-unmounted-foreground = ${colors.alert}

[module/wlan]
type = internal/network
interface = wlp6s0
interval = 3.0
label-connected = %downspeed% ↓ %upspeed% ↑
format-connected = <label-connected>
label-disconnected = Disconnected
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = enp5s0
interval = 3.0
label-connected = %local_ip%
format-connected = <label-connected>
label-disconnected = Disconnected
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}

[module/xkeyboard]
type = internal/xkeyboard
label-layout = %layout%
format = <label-layout>

[module/date]
type = internal/date
interval = 5
date = "%d.%m"
date-alt = "%a %d-%m-%Y"
time = %H:%M
time-alt = %H:%M:%S
label = %date% %time%
format = <label>
