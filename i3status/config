# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
        output_format = i3bar
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "disk /media/BigBoyMovies"
order += "disk /media/BigBoySeries"
order += "disk /media/SmallBoy"
order += "tztime local"

cpu_usage {
        format = " cpu  %usage "
}

disk "/" {
        format = " Main %avail "
}

disk "/media/BigBoyMovies" {
        format = " Movies %avail "
}

disk "/media/BigBoySeries" {
        format = " Series %avail "
}

disk "/media/SmallBoy" {
        format = " Extra %avail "
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %d.%m %H:%M "
}
